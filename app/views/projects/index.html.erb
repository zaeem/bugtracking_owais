<h1>Listing PROJECTS</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <td>Name</td>
      <td>Edit</td>
      <td>Delete</td>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= link_to 'Edit', {:action => 'edit', :id => project.id}, :class => 'btn btn-mini btn-primary' %></td>
        <td><%= link_to 'Destroy', {:action => 'destroy', :id => project.id}, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Project', {:action => 'new'}, :class => 'btn btn-mini btn-success' %>
