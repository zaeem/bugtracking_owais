<!DOCTYPE html>
<html>
  <head>
    <title>BugTracking</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    <div class="container">

      <% if user_signed_in? %>
        <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">BUG TRACKING APP</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li>
                <%= link_to "BUGS", bugs_path,:class=> 'nav-item nav-link' %>
              </li>
              <li>
                <% if can? :manage ,@projects%>
                  <%= link_to "PROJECTS", projects_path,:class=> 'nav-item nav-link' %></li>
                <%end%>
              </li>
              <li>
                <%= link_to('Logout', destroy_user_session_path, :method => :delete,:class=> 'nav-item nav-link') %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <h1>HELLO <%= current_user.name%></h1>
      <%end%>
      <div class="row">
        <div class="col-md-12">
          <% if notice %>
            <p class="alert alert-success"><%= notice %></p>
          <% end %>
          <% if alert %>
            <p class="alert alert-danger"><%= alert %></p>
          <% end %>

          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
